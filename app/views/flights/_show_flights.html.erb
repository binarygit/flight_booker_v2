<% if flights.empty? %>
  <p>Sorry, no flights available!</p>
<% else %>
  <%= form_with url: '/bookings/new', method: 'GET' do |f| %>
    <%= f.hidden_field passenger_num, name: :passenger_num, value: passenger_num %>
    <%= f.collection_radio_buttons :flight_id, flights, :id, :start_date %>
    <%= f.submit %>
  <% end %>
<% end %>

